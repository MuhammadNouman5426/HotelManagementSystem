@model IEnumerable<HotalManagementSystem.Models.Customer>

@{
    ViewData["Title"] = "ViewCustomer";
}

<h4 class="bg-dark text-center text-danger">View Customer</h4>
<table class="table table-light table-striped" >
    <thead>
        <tr class="text-danger">
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalBill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-danger">
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalBill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentType)
            </td>
            <td>
                <a class="btn btn-dark text-danger" asp-controller="Home" asp-action="UpdateCustomer" asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-danger text-dark" asp-controller="Home" asp-action="DeleteCustomer" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
