@model HotalManagementSystem.Models.Waiter

@{
    ViewData["Title"] = "AddWaiter";
}
@if (TempData["Success"] != null)
{
    TempData["Success"] = null;
    <div class="m-auto">
        <div class="alret alert-dark"></div>
        <h5 class="text-danger">Registered Successfully...</h5>
    </div>
}



<div class="row text-center">
    <div class="col-md-4 m-auto bg-dark text-danger">
<h5 class="text-center bg-dark text-danger"><br />Add Waiter</h5>
<hr class="bg-danger" />
        <form asp-action="AddWaiter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JoiningDate" class="control-label"></label>
                <input asp-for="JoiningDate" class="form-control" />
                <span asp-validation-for="JoiningDate" class="text-danger"></span>
            </div>
            <div class="form-group bg-danger">
                <input type="submit" class="btn btn-dark text-danger" value="Create"  />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
