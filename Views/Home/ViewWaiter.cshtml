@model IEnumerable<HotalManagementSystem.Models.Waiter>

@{
    ViewData["Title"] = "ViewWaiter";
}

@{ 
    int i = 0;
}

    <h4 class=" bg-dark text-center text-danger"><p></p>View Waiter<p></p></h4>

    <table class="table table-light table-striped">
        <thead>
           <tr class="text-danger">
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JoiningDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-danger">
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-danger">
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                        @{
                            i += int.Parse(item.Salary);
                        }
                    </td>
                    <td>
                        @item.JoiningDate.ToString("dd-mm-yy hh:mm " +
                       "")
                    </td>
                    <td>
                        <a class="btn btn-dark text-danger" asp-controller="Home" asp-action="UpdateWaiter" asp-route-id="@item.ID">Edit</a>
                        <a class="btn btn-danger text-dark" asp-controller="Home" asp-action="DeleteWaiter" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-left m-auto text-danger">
        <h5>Total Salries To Pay = @Model.Count() </h5>

        <h5>Total Amount = Rs: @i</h5>
    </div>